{
    "name": "slim/pus",
    "description": "A URL shortener based on the Slim microframework.",
    "keywords": ["microframework", "url", "shortnener"],
    "license": "MIT",
    "authors": [
        {
            "name": "Phillip Partsch",
            "email": "phillip.dev.p@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "catfan/Medoo": "^1.5",
        "akrabat/rka-ip-address-middleware": "^0.6.0"

    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    },
    "autoload": {
      "psr-4": {
        "PUS\\Util\\Random\\": "src",
        "PUS\\Util\\Database\\": "src"
      }
    }

}
